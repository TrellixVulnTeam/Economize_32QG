#:kivy 2.0.0
#:include telas/config.kv 
<AdicionaGanho>:

    #Elementos que serão trabalhados pelo .py
    setMensagem: setMensagem
    getDescricao: getDescricao
    getValor: getValor

    BoxLayout:
        Label:
            text:'Entrada'
        Label:
            text:'Valor:'
        TextInput:
            id: getValor
        Label:
            text: "Descrição:"
        TextInput:
            id: getDescricao
        Label:
            id: setMensagem
        Button:
            text:'Adicionar'
            on_press:
                root.adicionaGanho(getValor.text, getDescricao.text)
        Button:
            text:'Cancelar'
            on_press:
                root.manager.current="principal"
                root.manager.transition.direction="right"
                #left para entrar na página
                #right para sair