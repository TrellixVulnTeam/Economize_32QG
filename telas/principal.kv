#:kivy 2.0.0
#:include telas/config.kv
<Principal>:
    #Elementos que serão trabalhados pelo arquivo .py
    setMensagem: setMensagem
    setSaldo: setSaldo
    setConta: setConta
    boxBotoes: boxBotoes

    BoxLayout:
        size_hint_y: 1
        BoxLayout:
            padding: 40
            size_hint_y: 0.3
            canvas.before:
                Color:
                    rgba: 0.81,0.84,0.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: setSaldo
                text:'Olá!'
                height: self.texture_size[1]
                font_size: "36sp"
            Label:
                id: setConta
                height: self.texture_size[1]
                font_size: "18sp"
            Label:
                font_size: "14sp"
                id: setMensagem
                height: self.texture_size[1]
                #text: "eu sou uma mensagem de sucesso ou de erro"
        BoxLayout:
            size_hint_y: 0.9
            padding: 30, 0
            Label: 
                text: "Lançamentos"
                haling: "left"
                text_size: self.width, None
                font_size: "20sp"
            BoxLayout:
                Label:
                    text: " "
            
            
    FloatLayout:
        id: boxBotoes
        size_hint_y: 0.35
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: root.width/30
        Button:
            background_normal: "telas/imgs/toggleButton_normal.png"
            background_down: "telas/imgs/toggleButton_down.png"
            size: root.width*0.16,root.width*0.16
            size_hint:(None,None)
            border: (0,0,0,0)
            on_press:
                root.mostrarBotoes()