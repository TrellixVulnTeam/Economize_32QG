#:kivy 2.0.0
#:include telas/config.kv
<Principal>:
    #Elementos que serão trabalhados pelo arquivo .py
    setMensagem: setMensagem
    setSaldo: setSaldo
    setConta: setConta
    BoxLayout:
        Label:
            id: setSaldo
            text:'Olá!'
        Label:
            id: setConta
        Label:
            id: setMensagem
        Button:
            text:'Adiciona conta'
            on_press:
                root.manager.current="adicionaConta"
                root.manager.transition.direction="left"
                #left para entrar na página
                #right para sair
        Button:
            text:'Adiciona ganho'
            on_press:
                root.podeAdicionarGanho()
        Button:
            text:'Adiciona retirada'
            on_press:
                root.podeAdicionarRetirada()
        Button:
            text:'Suas contas'
            on_press:
                root.manager.current="alteraContas"
                root.manager.transition.direction="left"
                root.manager.current_screen.exibirContas()
                #left para entrar na página
                #right para sair