#:kivy 2.0.0
#:include telas/config.kv
<Principal>:
    #Elementos que serão trabalhados pelo arquivo .py
    setSaldo: setSaldo
    setConta: setConta
    boxBotoes: boxBotoes

    BoxLayout:
        size_hint_y: 1
        #Esse spancing é do mesmo tamanho 
        # que a altura da sombra
        spacing: root.width/100
        #Cabeçalho
        BoxLayout:
            size_hint_y: 0.22
            spacing: 0
            padding: 0
            orientation: "horizontal"
            #Cor
            canvas:
                Color:
                    rgba: 0.81,0.84,0.99,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Sombra
            canvas.before:
                Color:
                    rgba: 0.94,0.94,0.94,1
                RoundedRectangle:
                    #A subtração representa a altura da sombra
                    pos: self.pos[0], self.pos[1]-root.width/100
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Espaço vazio
            Label:
                
            #Título
            AnchorLayout:
                anchor_y: "center"
                anchor_x: 'center'
                BoxLayout:
                    #Essa cor é necessária
                    canvas:
                        Color:
                            rgba: 0.81,0.84,0.99,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: setSaldo
                        text:'Olá!'
                        height: self.texture_size[1]
                        font_size: "26sp"
                    Label:
                        id: setConta
                        height: self.texture_size[1]
                        font_size: "18sp"
                    Espacamento:
            #Espaço vazio
            Label:
        #Corpo
        BoxLayout:
            #Espaço laterais
            padding: (root.width/20, 0)
            AnchorLayout:
                anchor_y: 'top'
                anchor_x: 'center'
                BoxLayout:
                    size_hint_y: None
                    Espacamento:
                        height: self.texture_size[1]/2
                    #Título 02
                    NomeC: 
                        text: "Lançamentos"   
                    Espacamento:
                        height: self.texture_size[1]/2      

    #Botões   
    FloatLayout:
        id: boxBotoes
        size_hint_y: 0.35
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: root.width/30
        Button:
            background_normal: "imgs/toggleButton_normal.png"
            background_down: "imgs/toggleButton_down.png"
            size: root.width*0.16,root.width*0.16
            size_hint:(None,None)
            border: (0,0,0,0)
            on_press:
                root.mostrarBotoes()
    