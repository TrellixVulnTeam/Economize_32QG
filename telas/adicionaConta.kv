#:kivy 2.0.0
#:include telas/config.kv 
<AdicionaConta>:

    #Elementos que serão trabalhados pelo .py
    setMensagem: setMensagem
    getNome: getNome
    getTipo: getTipo
    getPadrao: getPadrao

    BoxLayout:
        Label:
            text:'Nova Conta'
        Label:
            text:'Nome:'
        TextInput:
            id: getNome
        Label:
            text: "Tipo:"
        #Talvez esse input mude para um droplist
        TextInput:
            id: getTipo
        GridLayout:
            cols: 2
            CheckBox:
                id: getPadrao
            Label:
                text:'Tornar conta padrão'
        Label:
            id: setMensagem
        Button:
            text:'Adicionar'
            on_press:
                root.cadastraConta(getNome.text,getTipo.text, getPadrao.active)
        Button:
            text:'Cancelar'
            on_press:
                root.manager.current="principal"
                root.manager.transition.direction="right"
                #left para entrar na página
                #right para sair