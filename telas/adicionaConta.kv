#:kivy 2.0.0
<AdicionaConta>:

    #Elementos que serão trabalhados pelo .py
    getNome: getNome
    getPadrao: getPadrao
    erroNome: erroNome
    erroTipo: erroTipo
    tipoI: tipoI
    tipoII: tipoII
    tipoIII:tipoIII

    BoxLayout:
        size_hint_y: 1
        #Esse spancing é do mesmo tamanho 
        # que a altura da sombra
        spacing: root.width/100
        #Cabeçalho
        BoxLayout:
            size_hint_y: 0.15
            spacing: 0
            padding: 0
            orientation: "horizontal"
            #Cor
            canvas:
                Color:
                    rgba: 0.81,0.84,0.99,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Sombra
            canvas.before:
                Color:
                    rgba: 0.94,0.94,0.94,1
                RoundedRectangle:
                    #A subtração representa a altura da sombra
                    pos: self.pos[0], self.pos[1]-root.width/100
                    size: self.size
                    radius: [(0, 0), (0, 0), (root.width/20, root.width/20), (root.width/20, root.width/20)]
            #Botão de voltar
            AnchorLayout:
                anchor_y: "center"
                anchor_x: 'left'
                padding: root.width/20
                Button: 
                    background_normal: "imgs/btnVoltar.png"
                    background_down: "imgs/btnVoltar.png"
                    border: (0,0,0,0)
                    size: '24dp','24dp'
                    size_hint: (None, None)
                    on_press:
                        root.manager.current="alteraContas"
                        root.manager.transition.direction="right"
                        #left para entrar na página
                        #right para sair
            #Título
            AnchorLayout:
                anchor_y: "center"
                anchor_x: 'center'
                Label:
                    text:'Nova conta'
            #Espaço vazio
            Label:
        #Formulário
        BoxLayout:
            #Distânica das laterais
            padding: 50, 0
            AnchorLayout:
                anchor_y: 'top'
                anchor_x: 'center'
                BoxLayout:
                    size_hint_y: None
                    #CampoNome
                    Espacamento:
                    Label:
                        height: self.texture_size[1]+dp(20)
                        haling: "left"
                        text_size: self.width, None
                        text:'Nome:'
                    InputConta:
                        id: getNome
                        size_hint_x: 0.6
                    ErroCampo:
                        id: erroNome
                    Espacamento:

                    #CampoTipo
                    Espacamento:
                    Label:
                        haling: "left"
                        text_size: self.width, None
                        text: "Tipo:"
                        height: self.texture_size[1]+dp(20)
                    #Os tipos
                    BoxLayout:
                        id: layoutTipo
                        orientation: "horizontal"
                        size_hint: 1, None
                        spacing: root.width/30
                        #1
                        ToggleButton:
                            id: tipoI
                            valor: "1"
                            text: "Dinheiro"
                            on_press:
                                root.escolheuTipo(tipoI, tipoII, tipoIII)
                        #2
                        ToggleButton:
                            id: tipoII
                            valor: "2"
                            text: "Saldo"
                            on_press:
                                root.escolheuTipo(tipoI, tipoII, tipoIII)
                        #3
                        ToggleButton:
                            id: tipoIII
                            valor: "3"
                            text: "Investimento"
                            on_press:
                                root.escolheuTipo(tipoI, tipoII, tipoIII)
                                                    
                    ErroCampo:
                        id: erroTipo
                    Espacamento:

                    #CampoCheckbox
                    Espacamento:
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, None
                        CheckBox:
                            
                            id: getPadrao
                            background_checkbox_normal: "imgs/checkbox_normal.png"
                            background_checkbox_down: "imgs/checkbox_down.png"
                            border: 0,0,0,0
                            size_hint_x: 0.3, None
                        Label:
                            text:'[ref=""]Tornar conta padrão[/ref]'
                            markup: True
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]+dp(20)
                            on_ref_press:
                                root.trocaCheck()
                    Espacamento:
        #Botão adicionar
        BoxLayout:
            size_hint_y: 0.3
            orientation: "horizontal"
            Label:
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                Button:
                    text:'Criar'
                    size_hint_x: 1
                    background_normal: "imgs/btnAzul.png"
                    background_down: "imgs/btnAzul.png"
                    on_press:
                        root.cadastraConta(getNome.text, getPadrao.active)
            Label:
